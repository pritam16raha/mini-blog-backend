{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",                 // Reverted to the standard for Express
    "moduleResolution": "node",           // The corresponding resolution strategy
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}